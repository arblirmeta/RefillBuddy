<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- titel -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Neue Wasserstelle hinzuf端gen"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:textColor="@android:color/black" />

    <!-- name eingabe -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name der Wasserstelle:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/nameField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="z.B. Brunnen am Alexanderplatz"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="16dp" />

    <!-- beschreibung eingabe -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Beschreibung:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/descriptionField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="z.B. Sauber, immer verf端gbar"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="16dp" />

    <!-- adresse eingabe -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adresse:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/addressField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="z.B. Alexanderplatz 1, Berlin"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="24dp" />

    <!-- hinzuf端gen button -->
    <Button
        android:id="@+id/addButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wasserstelle hinzuf端gen"
        android:textSize="18sp"
        android:padding="16dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <!-- progress bar -->
    <ProgressBar
        android:id="@+id/addProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- tipp text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipp: Gib Name, Beschreibung und Adresse ein"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_marginTop="16dp" />

</LinearLayout> 